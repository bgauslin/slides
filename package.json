{
  "name": "slides",
  "description": "Slideshow app made with Vue",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/bgauslin/slides"
  },
  "private": true,
  "devServer": "slides.gauslin.test",
  "paths": {
    "apache": {
      "src": "source/apache/_htaccess",
      "name": ".htaccess",
      "dest": "public"
    }, 
    "html": {
      "src": "source/html/**/*",
      "dest": "public"
    }, 
    "icons": {
      "src": "source/icons/**/*",
      "dest": "public/ui/icons"
    },
    "js": {
      "src": "source/js/slides.js",
      "dest": "public/ui/slides.js",
      "bundleSrc": "slides.js",
      "bundleDest": "public/ui"
    },
    "stylus": {
      "src": "source/stylus/slides.styl",
      "dest": "public/ui"
    },
    "version": {
      "src": [
        "public/ui/slides.css",
        "public/ui/slides.js"
      ],
      "dest": "public/build/ui",
      "manifestFile": "public/build/manifest.json"
    },
    "webfonts": {
      "src": "source/webfonts/**/*",
      "dest": "public/ui/webfonts"
    }
  },
  "tasks": {
    "build": [
      "apache",
      "html",
      "js",
      "icons",
      "stylus",
      "webfonts"
    ],
    "default": [
      "html",
      "js",
      "stylus"
    ]
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "imagesloaded": "^4.1.1",
    "pug": "^2.0.0-beta6",
    "spin": "0.0.1",
    "stylus": "^0.54.5",
    "vue": "^2.2.0",
    "vue-router": "^2.0.1",
    "vuex": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/register": "^7.0.0-rc.1",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "next",
    "browser-sync": "^2.24.6",
    "browserify": "^16.2.2",
    "envify": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-hash": "^4.2.2",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-stylus": "^2.7.0",
    "gulp-uglify": "^3.0.1",
    "gulp-uglify-es": "^1.0.4",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vueify": "^9.4.1",
    "vueify-insert-css": "^1.0.0"
  }
}
