{
  "name": "Slideshows",
  "description": "Slideshow app made with Vue",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/bgauslin/slides"
  },
  "private": true,
  "dependencies": {
    "fastclick": "^1.0.6",
    "imagesloaded": "^4.1.1",
    "pug": "^2.0.0-beta6",
    "spin": "0.0.1",
    "stylus": "^0.54.5",
    "vue": "^2.2.0",
    "vue-resource": "^1.0.3",
    "vue-router": "^2.0.1",
    "vuex": "^2.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "chalk": "^1.1.3",
    "fancy-log": "^1.2.0",
    "git-rev-sync": "^1.7.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.1",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-debug": "^2.1.2",
    "gulp-filter": "^5.0.1",
    "gulp-if": "^2.0.1",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-newer": "^1.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-print": "^2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "0.5.4",
    "gulp-rev": "^7.1.0",
    "gulp-sass": "^2.1.0",
    "gulp-size": "^2.1.0",
    "gulp-streamify": "1.0.2",
    // "gulp-stylus": "^#.#.#",
    "gulp-uglify": "^1.5.4",
    "vinyl-source-stream": "^1.1.0",
    "vueify": "^9.2.4"
  },
  "urls": {
    "live": "https://slides.gauslin.com/",
    "local": "http://slides.gauslin.test/"
  },
  "vars": {
    "siteCssName": "site.combined.min.css",
    "scssName": "slides.scss",
    "cssName": "slides.css"
  },
  "scripts": {
    "start": "gulp",
    "build": "gulp build"
  },
  "paths": {
    "src": {
      "base": "./src/",
      "css": "./src/css/",
      "fonts": "./src/fonts/",
      "js": "./src/js/",
      "scss": "./src/scss/"
    },
    "dist": {
      "base": "./public/",
      "css": "./public/css/",
      "js": "./public/js/",
      "fonts": "./public/fonts/"
    },
    "build": {
      "base": "./build/",
      "css": "./build/css/",
      "fonts": "./build/fonts/",
      "js": "./build/js/",
      "html": "./build/html/"
    },
    "scss": []
  },
  "globs": {
    "distCss": [
      "./build/css/*.css",
      "./src/css/*.css"
    ],
    "img": [
      "./public/img/"
    ],
    "components": [
      "./src/components/**/*.vue"
    ],
    "fonts": [
      "./build/fonts/fontello/font/*.{eot,ttf,woff,woff2}",
      "./src/fonts/*.{eot,ttf,woff,woff2}"
    ],
    "distJs": [
      "./build/js/*.js",
      "./node_modules/lazysizes/lazysizes.min.js",
      "./node_modules/lazysizes/plugins/bgset/ls.bgset.min.js",
      "./node_modules/vue/dist/vue.min.js",
      "./node_modules/vue-resource/dist/vue-resource.min.js"
    ],
    "babelJs": [
      "./src/js/*.js"
    ]
  }
}
