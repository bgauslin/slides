@import '_config/'

font_face()

body
  background DARK_GREY
  body_font()
  color OFF_WHITE
  height 100%
  margin 0
  padding 0
  -webkit-tap-highlight-color transparent
  text-size-adjust none
  width 100%

*
  box-sizing border-box

figure
  margin 0
  padding 0

img
  height auto
  vertical-align middle
  width 100%

p
  line-height 1.5
  margin 0 0 1em

a
  text-decoration none

[v-cloak]
  visibility hidden

.no-js
  align-items center
  display flex
  min-height 100vh
  padding 1rem

.no-js__message
  background WHITE
  border 1px solid LIGHTER_GREY
  border-radius 4px
  margin 0 auto
  padding 1rem
  text-align center

  @media BREAKPOINT_MEDIUM
    max-width 30rem
    padding 2rem

@import '_animations'