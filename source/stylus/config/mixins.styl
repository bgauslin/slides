// @mixin
// @param Number weight [400]
body_font(weight = 400)
  font-family 'Source Sans Pro', sans-serif
  font-weight weight

// @mixin
// @param Color color
// @param Number size
// @param String direction
css_triangle(color, size, direction)
  if direction == 'up'
    border-bottom size solid color
    border-left size solid transparent
    border-right size solid transparent
  if direction == 'down'
    border-left size solid transparent
    border-right size solid transparent
    border-top size solid color
  if direction == 'right'
    border-bottom size solid transparent
    border-left size solid color
    border-top size solid transparent
  if direction == 'left'
    border-bottom size solid transparent
    border-right size solid color
    border-top size solid transparent
  content ''
  display inline-block
  height 0
  width 0

// @mixin
font_face()
  @font-face
    font-display block
    font-family 'Avenir Variable'
    src url('/ui/webfonts/AvenirNext-Variable.woff2') format('woff2')
    font-weight 1 999

  @font-face
    font-display block
    font-family 'Avenir Medium'
    src url('/ui/webfonts/AvenirLTStd-Medium.woff2') format('woff2'),
        url('/ui/webfonts/AvenirLTStd-Medium.woff') format('woff')
    font-weight 500

// @mixin
// @param Number weight
font_weight(weight)
  font-weight weight

  @supports (font-variation-settings: normal)
    font-variation-settings 'wght' weight

// @mixin
// @param Number weight [500]
heading_font(weight = 500)
  font-family 'Avenir Medium' sans-serif // fallback
  font-weight weight

  @supports (font-variation-settings: normal) // variable
    font-family 'Avenir Variable', sans-serif
    font-variation-settings 'wght' weight

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link(link, visited, hover, active)
  &:link
    color link

  &:visited
    color visited

  &:active
  &:focus
    color active

  [no-touch]&:hover
    color hover

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link_background(link, visited, hover, active)
  &:link
    background link

  &:visited
    background visited

  &:active
  &:focus
    background active

  [no-touch]&:hover
    background hover

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link_border(link, visited, hover, active)
  &:link
    border-color link

  &:visited
    border-color visited

  &:active
  &:focus
    border-color active

  [no-touch]&:hover
    border-color hover

// @mixin
// @param Number elevation
shadow(elevation)
  if elevation == 0
    box-shadow none
  if elevation == 1
    box-shadow 0 0 10px 0 rgba(black, .12)
  if elevation == 2
    box-shadow 0 1px 3px rgba(black, .12), 0 1px 2px rgba(black, .24)
  if elevation == 3
    box-shadow 0 3px 6px rgba(black, .16), 0 3px 6px rgba(black, .23)
