.app
  display grid
  grid-template-columns 1fr
  grid-template-rows '%s 1fr %s' % (Layout.HeaderHeight.BASE Layout.ControlsHeight.BASE)
  min-height 100vh // fallback
  min-height calc(var(--viewport-unit, 1vh) * 100)

  @media Breakpoint.MEDIUM
    grid-template-rows '%s 1fr %s' % (Layout.HeaderHeight.MEDIUM Layout.ControlsHeight.MEDIUM)

.first-run
  animation-name fadeIn

.slide-in-left
  animation-name slideInLeft

.slide-in-right
  animation-name slideInRight

.slide-out-left
  animation-name slideOutLeft

.slide-out-right
  animation-name slideOutRight

.first-run
.slide-in-left
.slide-in-right
.slide-out-left
.slide-out-right
  animation-duration '%s' % Transition.SLIDE
  animation-timing-function ease-out

  @media Breakpoint.LARGE
    animation-duration '%s' % Transition.SLIDE_LARGE
