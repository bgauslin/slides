.cover
  grid-row 1 / span 3

.cover
.cover__frame
  align-items center
  display flex
  justify-content center
  width 100%

.cover__frame
  background-color var(--cover-background)
  height 100%

.cover__header
  padding 1rem
  text-align center

.cover__heading
  font-size var(--h1)
  heading_font()
  margin 0 0 .25em
  padding 0

.cover__summary
  font-size var(--h3)
  margin 0
  padding 0

.cover__link
  align-items center
  border 2px solid var(--cover-active)
  border-radius (LINK_HEIGHT_COVER / 2)
  display inline-flex
  heading_font(600)
  height LINK_HEIGHT_COVER
  link(var(--cover-link), var(--cover-link), var(--cover-active), var(--cover-active))
  link_background(var(--cover-link-background), var(--cover-link-background), var(--cover-link-background-active), var(--cover-link-background-active))
  margin px_to_rem(16) 0 0
  padding 0 px_to_rem(24)

  @media Breakpoint.MEDIUM
    margin px_to_rem(24) 0 0

[no-touch] .cover__link
  transition background var(--transition), color var(--transition), transform var(--transition)

[no-touch] .cover__link:active
  transform scale(.9)
