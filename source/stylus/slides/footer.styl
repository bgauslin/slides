.footer
  align-items center
  bottom 0
  display flex
  height '%s' % Layout.ControlsHeight.BASE
  justify-content center
  left 0
  position fixed
  right 0
  text-align center
  z-index 1

  @media Breakpoint.MEDIUM
    height '%s' % Layout.ControlsHeight.MEDIUM

.controls ~ .footer
  display none

.thumbs ~ .footer
  grid-row 3
  position relative

.copyright
  font-size '%s' % FontSize.Base.FINEPRINT
  heading_font()
  margin 0

  @media Breakpoint.MEDIUM
    font-size '%s' % FontSize.Medium.FINEPRINT

.copyright__bug
  margin-right .5em

.copyright__link
  font_weight(600)
  transition color '%s' % Transition.DEFAULT
