.slideshows
  grid-row 2
  width 100%

  @media Breakpoint.MEDIUM
    margin 0 auto
    max-width CONTENT_MAX_WIDTH

.slideshows__group
  margin '0 %s' % Layout.SlideshowGap.BASE

  @media Breakpoint.MEDIUM
    display grid
    grid-gap '%s' % Layout.SlideshowGap.MEDIUM
    grid-template-columns repeat(2, 1fr)
    margin '0 %s' % Layout.SlideshowGap.MEDIUM

.slideshow:not(:last-child)
  margin '0 0 %s' % Layout.SlideshowGap.BASE

  @media Breakpoint.MEDIUM
    margin 0

.slideshow__link
  display block
  transition 'color %s' % Transition.DEFAULT

.slideshow__heading
  font-size var(--h3)
  heading_font()
  margin px_to_em(12) 0
  padding 0
