BAR_HEIGHT = 3px
BAR_WIDTH = 20vw

.progress-bar
  height BAR_HEIGHT
  width 100vw
  position fixed
  z-index z-index-progress-bar

.progress-bar::before
  animation loading 2s .3s linear infinite
  background var(--text-1-color)
  content ''
  display block
  height BAR_HEIGHT
  left (- BAR_WIDTH)
  position absolute
  width BAR_WIDTH

@keyframes loading 
  0
    left (- BAR_WIDTH)
    width 30%
  50%
    width 30%
  70%
    width 70%
  80%
    left 50%
  95%
    left 120%
  100%
    left 100%
