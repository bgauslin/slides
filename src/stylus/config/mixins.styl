// @mixin
all-webfonts()
  @font-face
    font-family 'Avenir Variable'
    font-weight 1 999
    src url('https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2') format('woff2')

  @font-face
    font-family 'Source Sans Variable'
    font-weight 1 999
    src url('https://assets.gauslin.com/fonts/SourceSans-Variable-Roman.woff2') format('woff2')

// @mixin
// @param Number level
elevation(level)
  if level == 0
    box-shadow none
  if level == 1
    box-shadow 0 0 10px 0 rgba(black, .12)
  if level == 2
    box-shadow 0 1px 3px rgba(black, .12), 0 1px 2px rgba(black, .24)
  if level == 3
    box-shadow 0 3px 6px rgba(black, .16), 0 3px 6px rgba(black, .23)

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link(link, visited, hover, active)
  &:link
    color link

  &:visited
    color visited

  &:active
  &:focus
    color active

  [no-touch] &
    &:hover
      color hover

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link-background(link, visited, hover, active)
  &:link
    background link

  &:visited
    background visited

  &:active
  &:focus
    background active

  [no-touch] &
    &:hover
      background hover

// @mixin
// @param String type ['body']
// @param Number weight [400]
webfont(type = 'body', weight = 400)
  if type == 'body'
    font-family 'Source Sans Variable', sans-serif
    font-variation-settings 'wght' weight

  if type == 'heading'
    font-family 'Avenir Variable', sans-serif
    font-variation-settings 'wght' weight
