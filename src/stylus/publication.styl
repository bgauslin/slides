.publication
  padding 0 rem(16)

  @media breakpoint.medium
    align-items center
    display flex
    margin 0 rem(32)
    padding 0
  
  @media breakpoint.large
    margin 0

.publication__image
  margin 0
  width 50%

  @media breakpoint.medium
    flex 0 0 33.33%
    width auto
  
  @media breakpoint.medium
    margin 0

.publication__details
  padding 1rem 0 0

  @media breakpoint.medium
    padding 2rem

.publication__title
  webfont('heading', 500)
  font-size var(--h2-font-size)
  margin 0 0 rem(4)

.publication__publisher
  font-size var(--h3-font-size)
  margin 0 0 rem(6)

.publication__date
  font-size var(--caption-font-size)
  margin 0

.publication__link
  capsule-button()
  link(var(--text-1-color), var(--text-1-color), var(--background-0), var(--text-1-color))
  link-background(var(--background-1), var(--background-1), var(--text-1-color), var(--background-1))
  font-size em(14)
  margin rem(16) 0 0
  transition transform transition

.publication__link:active
  transform scale(.9)

[no-touch] .publication__link
  transition background transition, color transition, transform transition

[href$=pdf]::after
  bottom -.1em
  content '[PDF]'
  font-size 75%
  margin-left .5rem
  position relative
