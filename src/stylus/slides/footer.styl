.footer
  webfont('heading', 500)
  align-items center
  display flex
  grid-column 1
  grid-row 3
  height CONTROLS_HEIGHT
  justify-content center
  padding 0 0 env(safe-area-inset-bottom)
  position relative
  text-align center
  width 100vw

.copyright
  color var(--text-alpha)
  font-size var(--fineprint)
  margin 0

.copyright__years
  margin-right px_to_em(8)

.copyright__owner
  link(var(--text-alpha), var(--text-alpha), var(--text), var(--text))
  transition color var(--transition)
