.header
  align-items center
  background var(--overlay-background)
  display flex
  grid-row 1
  left 0
  padding 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)
  position fixed
  width 100vw
  z-index '%s' % Stacking.App.HEADER

  @media Breakpoint.LARGE
    background 0

.header--cover
  background 0

@media Breakpoint.LARGE
  .header--thumbs
    background var(--overlay-background)

.header__content
  display flex
  margin 0 auto
  max-width CONTENT_MAX_WIDTH
  width 100%

.header__link
  webfont('heading', 500)
  align-items center
  display inline-flex
  font-size var(--site-header)
  height var(--header-height)
  padding 0 px_to_rem(16)
  transition transform var(--transition)
  transform-origin 0 50%

  @media Breakpoint.SMALL
    width auto

  @media Breakpoint.MEDIUM
    max-width 100vw
    padding 0 COLUMN_GAP

// NOTE: 'current' class is auto-generated for 'exact' router-links
.header__link--home.current
  cursor default

.header__link--home.current
.header__link--home.current:hover
  color var(--text)

.header__link__label
  font-size 1em
  margin 0
  overflow hidden
  text-overflow ellipsis
  transition color var(--transition)
  white-space nowrap

.header__link:active
  transform scale(.9)

.header__link--home.current:active
  transform none

.header__link__icon
  height px_to_rem(32)
  margin 0 px_to_rem(-4) 0 px_to_rem(-12)
  transform scale(.6)
  width px_to_rem(32)

  @media Breakpoint.MEDIUM
    margin-right 0
    transform 'scale(.7) translateY(%s)' % px_to_rem(2)

.header__link__icon > path
  fill none
  stroke currentColor
  stroke-width 4
  transition stroke var(--transition)
