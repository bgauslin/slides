.theme
  align-items center
  appearance none
  background 0
  border 0
  display inline-flex
  flex 0 0 var(--header-height)
  justify-content center
  margin-left auto
  overflow hidden
  outline none
  padding 0
  transition transform var(--transition)

  @media Breakpoint.LARGE
    align-self center
    background var(--overlay-background)
    border-radius 50%
    flex 0 0 auto
    margin-right px_to_rem(20)
    padding px_to_rem(12)
    width auto

.header--cover .theme
  background 0

[no-touch] .theme
  transition opacity var(--transition), transform var(--transition)

[no-touch] .theme:hover
  opacity .7

.theme:hover
  cursor pointer

.theme:active
  transform scale(.8)

.theme-icon
  width px_to_rem(18)

.theme-icon__circle
.theme-icon__path
  fill var(--text)
  stroke var(--text)
