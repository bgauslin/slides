.header
  align-items center
  backdrop-filter backdrop-effect
  display flex
  grid-row 1
  left 0
  padding 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)
  position fixed
  width 100vw
  z-index z-index-header

// No background on 'cover' view header since the full-screen image has
// an overlay.
.header--cover
  backdrop-filter none
  background 0

@media breakpoint.large
  .header
    backdrop-filter none

  .header--thumbs
    backdrop-filter backdrop-effect

.header__content
  display flex
  margin 0 auto
  max-width content-max-width
  width 100%

.header__link
  webfont('heading', 500)
  align-items center
  display inline-flex
  font-size var(--header-font-size)
  height var(--header-height)
  padding 0 rem(16)
  transition transform var(--transition)
  transform-origin 0 50%

  @media breakpoint.small
    width auto

  @media breakpoint.medium
    max-width 100vw
    padding 0 column-gap

// NOTE: 'current' class is auto-generated for 'exact' router-links
.header__link--home.current
  cursor default

  &
  &:hover
    color var(--text-1-color)

.header__link__label
  font-size 1em
  margin 0
  overflow hidden
  text-overflow ellipsis
  transition color var(--transition)
  white-space nowrap

.header__link:active
  transform scale(.9)

.header__link--home.current:active
  transform none

.icon--back
  height rem(32)
  margin 0 rem(-4) 0 rem(-12)
  transform scale(.6)
  width rem(32)

  @media breakpoint.medium
    margin-right 0
    transform 'scale(.7) translateY(%s)' % rem(2)
