.thumb__frame
  background var(--background-1)
  padding 0 0 100%
  position relative

.thumb__image
  opacity 0
  position absolute
  transition opacity transition

.thumb__image[ready]
  opacity 1

.thumb__link
  elevation(0)
  display block
  transition box-shadow transition, transform transition

[no-touch] .thumb__link:hover
  elevation(2)
  transform scale(1.05)

.thumb__link:active
[no-touch] .thumb__link:hover:active
  transform scale(.9)
