.cover
  display grid
  grid-row 1 / span 2
  place-content center

// Hide the spinner since it collides with the overlay text.
.cover .preload-spinner
  display none

.image--cover
.image--cover::after
  bottom 0
  left 0
  position absolute
  right 0
  top 0

.image--cover
  z-index z-index-cover-image

.image--cover::after
  background var(--background-1)
  content ''
  display block
  opacity var(--cover-opacity)
  z-index z-index-cover-overlay

.image__frame--cover
  height 100%
  width 100%

.img--cover
  height 100%
  object-fit cover

.cover__header
  padding 1rem
  text-align center

.cover__heading
  webfont('heading', 500)
  font-size var(--h1-font-size)
  margin 0 0 .25em
  padding 0

.cover__summary
  font-size var(--h3-font-size)
  margin 0
  padding 0

.cover__link
  capsule-button()
  link(var(--background-0), var(--background-0), var(--text-1-color), var(--text-1-color))
  link-background(var(--text-1-color), var(--text-1-color), transparent, transparent)
  border 2px solid var(--text-1-color)
  margin rem(16) 0 0
  padding-right rem(12)

  @media breakpoint.medium
    margin rem(24) 0 0

[no-touch] .cover__link
  transition background var(--transition), color var(--transition), transform var(--transition)

[no-touch] .cover__link:active
  transform scale(.9)

.header__link__label
  transition color var(--transition)
  
.cover__link__icon
  height rem(24)
  position relative
  top -1px
  width rem(24)

.cover__link__icon > polyline
  fill none
  stroke currentColor
  stroke-width 2.5
